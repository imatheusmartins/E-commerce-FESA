@model List<CarrinhoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Licenças no carrinho</h2>
<br />
<table class="table table-responsive">
    <tr>
        <th>Ação</th>
        <th>Nomelicenca</th>
        <th>Quantidade</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/Carrinho/Detalhes/?LicencaId=@item.LicencaId"> Alterar </a>
            </td>
            <td>@item.LicencaId - @item.NomeLicenca</td>
            <td>@item.Quantidade</td>
        </tr>
    }
</table>
<br />
<a href="/Carrinho/Index">Retornar para as compras</a>
<br />
<br />
<a href="/Carrinho/EfetuarPedido">Fechar pedido!!!</a>